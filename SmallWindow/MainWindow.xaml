<Window x:Class="SmallWindow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SmallWindow"
        WindowStyle="None"
        Background="{x:Null}"
        AllowsTransparency="True"
        mc:Ignorable="d"
        Title="MainWindow" Height="800" Width="800">
    <StackPanel
        x:Name="Basic">
        <StackPanel Orientation="Horizontal">
            <Label Width="320" Content="{Binding restDdayString}" FontSize="30" FontWeight="ExtraLight"/>
            <Label Content="초" FontSize="30" FontWeight="ExtraLight"/>
        </StackPanel>
        <StackPanel
            Orientation="Horizontal">
            <Label Width="180" Content="{Binding per}" FontSize="30" FontWeight="ExtraLight"/>
            <Label Content="%" FontSize="30" FontWeight="ExtraLight"/>
        </StackPanel>
    </StackPanel>
</Window>
